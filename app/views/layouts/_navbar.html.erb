<div class="navbar">
	<div class="navbar_left">
		<%= image_tag "facebook.png", class:"navbar_logo",  alt:"logo" %>
		<div class="input-icons">
			<i class="fas fa-search icon"></i>
			<input class="input-field" type="text" placeholder="Search on Facebook"/>
    </div>
    </div>

  <div class="navbar_center">
  <%= link_to "", user_path(@current_user), {class: "fas fa-home"} %> 
    <%= link_to "", friend_path(:id => @current_user.id), {class: "fas fa-user-friends"} %> 
    <a href="#">
      <i class="far fa-play-circle"></i>
    </a>
    <a href="#">
      <i class="fas fa-archive"></i>
    </a>
    <a href="#">
      <i class="fas fa-users"></i>
    </a>
  </div>

  <div class="navbar_right">
    <div class="navbar_right_profile">
      <%= image_tag "profile.png", alt:"profile" %>
      <%= content_tag(:span, "#{@current_user.first_name}") %>
    </div>
    <div class="navbar_right_links">
      <i class="fas fa-plus"></i>
      <i class="fab fa-facebook-messenger"></i>
      <i class="fas fa-bell"></i>
      <i class="fas fa-arrow-down"></i>
    </div>
  </div>
</div>