      <%= image_tag "https://picsum.photos/id/237/110/200", alt:"" %>
    </div>
    <div class="media_container">
      <div class="share">
        <div class="share_upSide">
          <%= image_tag "profile.png", alt:"profile" %>
          <%= text_field("", :body, placeholder:"What's on your mind, #{@current_user.first_name}?") %>
        </div>
        <hr />
        <div class="share_downSide">
          <div class="share_downSide_link">
            <i class="fas fa-video live-video-icon"></i>
            <span>Live Video</span>
          </div>
          <div class="share_downSide_link type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"">
            <i class="fas fa-photo-video photo-video-icon"></i>
            <span>Photo</span>
          </div>
          <div class="share_downSide_link">
            <i class="far fa-grin-alt feeling-icon"></i>
            <span>Feeling/Activity</span>
          </div>
        </div>
      </div>
      <!-- news feed -->
      <%= @current_users_posts.each do |post| %>
        <div class="news_feed">
          <div class="news_feed_title">
            <%= image_tag "user.png", alt:"user" %>
            <div class="news_feed_title_content">
              <%= content_tag(:p, "#{@current_user.first_name} #{@current_user.last_name}") %>
              <span>12h . <i class="fas fa-globe-americas"></i></span>
            </div>
          </div>
          <div class="news_feed_description">
            <%= content_tag(:p, "#{post.body}", class: "news_feed_subtitle") %>
            <% if post.image.attached? %>
              <%= image_tag post.image %>
            <% end %>
          </div>
          <div class="likes_area">
            <div class="emojis">
              <%= image_tag "emoji_like.png", alt:"like" %>
              <%= content_tag(:span, "#{count_post_likes(post.id)}") %>
            </div>
            <div class="comment_counts">
              <%= content_tag(:span, "#{count_post_comments(post.id)}") %>
            </div>
          </div>
          <div class="divider">
            <hr />
          </div>
          <div class="likes_buttons">
            <div class="likes_buttons_links">
              <%= link_to "", like_path(:type =>"Post", :id => post.id), {class: "far fa-thumbs-up", method: :post} %>
            </div>
            <div class="likes_buttons_links" type="button" id="xta">
              <i class="far fa-comment-alt"></i>
            </div>
            <div class="likes_buttons_links">
              <%= link_to "", "#", {class: "fas fa-share"} %>
            </div>
          </div>
          <div id=1>
            <%= form_with(url: comments_path(:post_id => post.id),  id: "new_comment", class: "comment_form") do |f| %>
              <%= text_field("", :comment_body , class: "comment_buttons" , placeholder: "Enter a comment" ) %>
              <div class="likes_buttons_links comment_like_button" type="button">
                <i class="far fa-thumbs-up"></i>
              </div>
            <% end %>
            <%= link_to "Click to post comment", "#" , class:"comment_post_link", :onclick=>"$('#new_comment').submit()" %>
            <%= get_post_comments(post.id).each do |comment| %>
              <%= form_with(url: "#", class: "comment_form") do |f| %>
                <%= text_field("", :comment_body , class: "comment_buttons" , placeholder: "#{comment.body}", :readonly => true) %>
                <div class="likes_buttons_links comment_like_button" type="button">
                  <i class="far fa-thumbs-up" id="comment_like"></i>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="content_right">
