    </div>
  </div>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
      <div class="modal-content">
        <div class="modal-header create-post">
          <h5 class="modal-title post-title" id="exampleModalLabel">Create Post</h5>
        </div>
        <%= form_with url: posts_path do |f| %>
          <div class="modal-body create-post">
            <%= text_field("", :body, placeholder:"What's on your mind, #{@current_user.first_name}?", class: "btn-lg btn-block mt-3 post-text") %>
            <div class="container photo-box">
              <p class="add-photo">Add Photos</p>
              <%= f.file_field :image %>
            </div>
          </div>
          <div class="modal-footer create-post">
            <button type="submit" class="btn btn-primary btn-lg btn-block mt-3">Post</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
